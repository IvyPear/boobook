<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image -->
        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_marketing_placeholder"
            android:background="@android:color/darker_gray"/>

        <!-- Title & Status Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Campaign Title"
                android:textSize="18sp"
                android:textColor="#1E293B"
                android:fontFamily="sans-serif-medium"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="Active"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:paddingHorizontal="12dp"
                android:background="@drawable/bg_tag_active"/>
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Campaign description goes here..."
            android:textSize="14sp"
            android:textColor="#64748B"
            android:maxLines="2"
            android:ellipsize="end"/>

        <!-- Footer: Views & Edit Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvViews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1.2K views"
                android:textSize="13sp"
                android:textColor="#94A3B8"
                android:drawablePadding="4dp"/>

            <!-- Edit Button (chỉ hiển thị khi có quyền) -->
            <View
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit"
                    app:tint="#3B82F6"
                    tools:ignore="ChildInNonViewGroup" />
            </View>

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>