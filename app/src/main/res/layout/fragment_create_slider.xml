<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#90CAF9"
            app:title="Slider Details"
            app:titleTextColor="#1E293B"
            app:subtitle="Create new slider"
            app:subtitleTextColor="#455A64"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="#1E293B" />

        <!-- Nội dung chính -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="32dp"
            android:paddingBottom="120dp">

            <!-- Card Upload Image -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Slider Image"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:id="@+id/layoutUploadImage"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="#E3F2FD"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        app:cardCornerRadius="16dp"
                        app:strokeColor="#BBDEFB"
                        app:strokeWidth="2dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_upload"
                            app:tint="#90CAF9"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Upload Slider Image"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="#1976D2"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Recommended: 1200x400px"
                            android:textSize="13sp"
                            android:textColor="#78909C"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ivSliderPreview"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="12dp"
                        android:scaleType="centerCrop"
                        android:visibility="gone"
                        app:cardCornerRadius="16dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Thông tin -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Slider Information"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1E293B"
                        android:layout_marginBottom="20dp"/>

                    <!-- Slider Title -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:boxBackgroundMode="filled"
                        app:boxBackgroundColor="#F5F7FA"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edtSliderTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter slider title"
                            android:padding="16dp"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Display Order -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Display Order"
                        android:textSize="14sp"
                        android:textColor="#455A64"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#F5F7FA"
                        android:backgroundTint="#F5F7FA"
                        app:cardCornerRadius="16dp"
                        android:paddingHorizontal="16dp"
                        android:layout_marginBottom="8dp">

                        <ImageButton
                            android:id="@+id/btnDecrease"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_arrow_drop_down"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:tint="#90CAF9"
                            android:contentDescription="Giảm"/>

                        <TextView
                            android:id="@+id/tvDisplayOrder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#1E293B"/>

                        <ImageButton
                            android:id="@+id/btnIncrease"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_arrow_drop_up"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            app:tint="#90CAF9"
                            android:contentDescription="Tăng"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lower numbers appear first"
                        android:textSize="13sp"
                        android:textColor="#78909C"
                        android:layout_marginBottom="24dp"/>

                    <!-- Active Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active Status"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="#1E293B"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Show this slider on homepage"
                                android:textSize="13sp"
                                android:textColor="#78909C"/>
                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/switchActive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Nút Save & Cancel -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveSlider"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="48dp"
                android:text="Save Slider"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                app:cornerRadius="28dp"
                android:backgroundTint="#64B5F6"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:text="Cancel"
                android:textSize="16sp"
                android:textColor="#64B5F6"
                app:cornerRadius="28dp"
                app:strokeColor="#64B5F6"
                app:strokeWidth="2dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>