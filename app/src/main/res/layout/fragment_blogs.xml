<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F8FBFF">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E3F2FD">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#E3F2FD"
            app:title="Blogs"
            app:titleTextColor="#1E293B"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="#1E293B"/>

        <!-- Search bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_search"
            app:startIconTint="#94A3B8"
            app:boxCornerRadiusTopStart="28dp"
            app:boxCornerRadiusTopEnd="28dp"
            app:boxCornerRadiusBottomStart="28dp"
            app:boxCornerRadiusBottomEnd="28dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#E0E0E0">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search blogs..."
                android:textColorHint="#94A3B8"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tab filter -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="12dp"
            app:tabMode="fixed"
            app:tabIndicatorColor="#3B82F6"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="#3B82F6"
            app:tabTextColor="#94A3B8"
            app:tabBackground="@android:color/transparent"
            app:tabRippleColor="@android:color/transparent"/>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Danh sÃ¡ch blog -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBlogs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingHorizontal="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="100dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/item_blog"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>